// simple test file

c :: class
    field :: 3

    init :: fn(self, val)
        self.thing := val

        f :: fn(s)
            print('arf from ', s)
        /fn
        self.arf := f
    /fn

    test :: fn(self, val)
        print(self, ' has ', val)
    /fn
/class

i :: c(42)
print(i.thing)

i.test('something')

i.arf2 := fn(self) print('arf2 from ', self) /fn

b :: i.test

b('a bound method')

print(i.field)
print(c.field)
i.arf()
i.arf2()
